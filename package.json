{
    "name": "my-chrome-extension",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.0.1",
        "react-scripts": "5.0.1",
        "react-toastify": "^10.0.4",
        "sass": "^1.71.1"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "purify-css": "^1.2.5",
        "source-map-explorer": "^2.5.3"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build && npm run purify-build-css && powershell.exe -ExecutionPolicy Bypass -File buildRenamer.ps1",
        "simple-build": "react-scripts build",
        "purify-build-css": "node ./node_modules/purify-css/bin/purifycss build/static/js/*.js build/static/css/*.css --out build/static/css/main.css --min true",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "analyze": "source-map-explorer build/static/js/main.*"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
